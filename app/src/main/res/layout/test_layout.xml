<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.uzlov.dating.lavada.ui.custom.UserAvatarImageView
        android:id="@+id/userAvatarImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/test_avatar"
        app:piv_borderColor="@color/Brand_hover"
        app:piv_premium="true"
        app:piv_premiumColor="@color/Premium_fill"
        app:piv_borderWidth="3dp"
        android:layout_margin="@dimen/default_margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.uzlov.dating.lavada.ui.custom.UserAvatarImageView
        android:id="@+id/userAvatarImageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/test_avatar"
        android:layout_margin="@dimen/default_margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAvatarImageView" />

    <com.uzlov.dating.lavada.ui.custom.UserAvatarImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/test_avatar"
        app:piv_premium="true"
        app:piv_premiumColor="@color/Premium_fill"
        app:piv_borderColor="@color/Primary_text"
        app:piv_borderWidth="2dp"
        android:layout_margin="@dimen/default_margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAvatarImageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>