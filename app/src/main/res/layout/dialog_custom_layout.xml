<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:orientation="vertical">

    <TextView
        style="@style/Title3"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="@dimen/default_margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Forgot your password?"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="We will send a new password to your email"
        android:layout_marginBottom="40dp"
        android:textColor="@color/Secondary_text"
        style="@style/Regular" />

    <TextView
        android:id="@+id/btDismissCustomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/Regular"
        android:textColor="@color/Secondary_text"
        android:text="Cancel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendPasswordCustomDialog"
        style="@style/DefaultButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send password"
        android:layout_margin="24dp"/>
</LinearLayout>