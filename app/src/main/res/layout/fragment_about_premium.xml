<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_about_premium"
        android:layout_width="303dp"
        android:layout_height="318dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_premium"
        style="@style/Title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:text="Premium"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_about_premium" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_desc_prem_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_coin"
        android:drawablePadding="10dp"
        android:text="Ежедневное начисление коинов"
        app:layout_constraintTop_toBottomOf="@id/tv_title_premium" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_desc_prem_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/heart_for_settings"
        android:drawablePadding="10dp"
        android:text="Просмотр тех, кто тебя лайкнул"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_prem_one" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_desc_prem_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/chevron_up"
        android:drawablePadding="10dp"
        android:text="Анкета выше других в ленте"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_prem_two" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_desc_prem_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/message_circle_for_ap"
        android:drawablePadding="10dp"
        android:text="Писать можно первым, не дожидаясь взаимки"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_prem_three" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_desc_prem_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/smile"
        android:drawablePadding="10dp"
        android:text="Золотая рамка аватарки"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_prem_four" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_desc_prem_six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/tiktok_for_ap"
        android:drawablePadding="10dp"
        android:text="Просмотр соц сетей людей, не дожидаясь взаимки"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_prem_five" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_buy_premium"
        style="@style/DefaultButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="36dp"
        android:text="Buy premium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_prem_six" />
</androidx.constraintlayout.widget.ConstraintLayout>