<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/default_margin_8"
        android:background="@drawable/dialog_bg"
        android:backgroundTint="@color/Placeholder_text"
        tools:context=".ui.activities.HostActivity">

        <TextView
            android:id="@+id/labelBuyCoins"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Buy coins"
            android:textColor="@color/Surface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/buy_300_coins"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/default_margin_16"
            android:text="300 coins"
            android:textColor="@color/Surface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelBuyCoins" />

        <TextView
            android:id="@+id/buy_300_coins_price"
            style="@style/DefaultButtons"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="end|center"
            android:paddingEnd="@dimen/default_margin_16"
            android:text="250 ₽"
            android:textColor="@color/Surface"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelBuyCoins" />

        <TextView
            android:id="@+id/buy_500_coins"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/default_margin_16"
            android:text="500 coins"
            android:textColor="@color/Surface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buy_300_coins" />

        <TextView
            android:id="@+id/buy_500_coins_price"
            style="@style/DefaultButtons"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="end|center"
            android:paddingEnd="@dimen/default_margin_16"
            android:text="400 ₽"
            android:textColor="@color/Surface"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buy_300_coins" />

        <TextView
            android:id="@+id/buy_1500_coins"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/default_margin_16"
            android:text="1500 coins"
            android:textColor="@color/Surface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buy_500_coins" />

        <TextView
            android:id="@+id/buy_1500_coins_price"
            style="@style/DefaultButtons"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="end|center"
            android:paddingEnd="@dimen/default_margin_16"
            android:text="990 ₽"
            android:textColor="@color/Surface"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buy_500_coins" />
        <TextView
            android:id="@+id/buy_3500_coins"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="start|center"
            android:paddingStart="@dimen/default_margin_16"
            android:text="3500 coins"
            android:textColor="@color/Surface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buy_1500_coins" />

        <TextView
            android:id="@+id/buy_3500_coins_price"
            style="@style/DefaultButtons"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="end|center"
            android:paddingEnd="@dimen/default_margin_16"
            android:text="1 390 ₽"
            android:textColor="@color/Surface"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buy_1500_coins" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ivClose"
        style="@style/DefaultButtons"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/default_margin_32"
        android:text="@string/cancel_label" />
</androidx.appcompat.widget.LinearLayoutCompat>

